---
import '../styles/app.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Cyclops turns your Mac's notch into a live Claude Code dashboard. Monitor sessions, preview diffs, jump to terminals â€” all from the top of your screen."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#050505" />
    <title>{title}</title>

    <!-- OG / Social -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/icon.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content="/icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Syne:wght@400..800&family=Lexend:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 32 32'><circle cx='16' cy='11' r='9' fill='%23E8862E'/><path d='M7 17C5 21 4 25 6 28' stroke='%23E8862E' stroke-width='2.5' stroke-linecap='round' fill='none'/><path d='M11 19C10 23 9 27 11 29' stroke='%23E8862E' stroke-width='2.5' stroke-linecap='round' fill='none'/><path d='M16 20C16 24 15 28 16 30' stroke='%23E8862E' stroke-width='2.5' stroke-linecap='round' fill='none'/><path d='M21 19C22 23 23 27 21 29' stroke='%23E8862E' stroke-width='2.5' stroke-linecap='round' fill='none'/><path d='M25 17C27 21 28 25 26 28' stroke='%23E8862E' stroke-width='2.5' stroke-linecap='round' fill='none'/><circle cx='16' cy='11' r='4.5' fill='white'/><circle cx='16' cy='11' r='2.2' fill='%231a1a1a'/><circle cx='17.2' cy='9.8' r='.8' fill='white'/></svg>" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  </head>
  <body class="antialiased">
    <!-- Ambient background glow -->
    <div class="fixed inset-0 pointer-events-none -z-10" aria-hidden="true">
      <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-accent/[0.03] rounded-full blur-[120px]"></div>
      <div class="absolute bottom-1/4 right-1/4 w-[500px] h-[500px] bg-blue-500/[0.02] rounded-full blur-[100px]"></div>
    </div>

    <slot />
  </body>
</html>
